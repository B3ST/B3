{#posts}
  <article class="post {post_class}">
    <header>
      <h1 class="title page-header">
        <a data-id="{ID}" data-slug="{slug}" href="{link}">{title|s}</a>
      </h1>
      {> "entry-meta-template.dust" /}
    </header>
    <div class="excerpt">
      {excerpt|s}
    </div>
  </article>
{/posts}
