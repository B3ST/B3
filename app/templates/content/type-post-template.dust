{! This can be changed at will, it is just to supply a default loading !}
<div class="loading">
  {+ loading /}
</div>

<article class="{post_class}">

  <header class="jumbotron">
    <div class="container">
      <h1 class="b3-post-title post-title entry-title">
        {title|s}
      </h1>
      <h2 class="byline author vcard" id="b3-post-author">
        By <a id="{author.ID}" slug="{author.slug}" href="{author.URL}" rel="author" class="fn">{author.name}</a></small>
      </h2>
      <p class="lead">
        {excerpt|s}
      </p>
    </div>
  </header>

  <div class="container">

    <div class="b3-post-content entry-content post-content">
      {content|s}
    </div>

    <footer>
      {+ entry-meta /}
    </footer>

    {+ pagination /}

    <aside class="post-comments">
      {@eq key=comment_status value="open"}
        <a href="#reply" class="b3-reply-post button reply" role="button">
          <span class="glyphicon glyphicon-comment"></span> Reply
        </a>
      {/eq}

      <ul class="comments b3-comments"></ul>
    </aside>
  </div>

</article>