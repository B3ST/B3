<article class="{post_class}">
  <header>
    <h1 class="b3-post-title">{title|s}</h1>
  </header>
  <div class="b3-post-content">
    {content|s}
  </div>
  <footer>
    {+ entry-meta /}
    <a href="#reply" class="b3-reply-post">Reply to post</a>
    <div class="b3-reply-section"></div>
  </footer>
  <ul class="b3-comments">
  </ul>
</article>

{+ pagination /}