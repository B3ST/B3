{> "{b3folder}/{b3type}-template.dust" /}

{< entry-meta }
<time class="published" datetime="{date}">{date}</time>
<p class="byline author vcard">By <a href="{author.URL}" rel="author" class="fn">{author.name}</a></p>
{/ entry-meta }

{< pagination }
<ul class="pager">
  <li><a href="#" class="{^has_previous}disabled {/has_previous}pagination-prev">&larr; Previous</a></li>
  <li><a href="#" class="{^has_next}disabled {/has_next}pagination-next">Next &rarr;</a></li>
</ul>
{/ pagination }